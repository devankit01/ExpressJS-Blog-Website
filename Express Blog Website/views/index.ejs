<%- include("header"); -%>

<div class="container">
        <br />
       
        <h2>Blog App</h2>
        <br>
        
        <% if (user) { %>
        <a href="/articles/add/" type="button" class="btn btn-light">Add Article</a>
        <a href="/logout" type="button" class="btn btn-light">Logout</a>
        <% } else { %>
        
        <a href="/signup" type="button" class="btn btn-light">Register</a>
        <a href="/signin" type="button" class="btn btn-light">Login</a>
        <% } %>

        <br>
        <br>

        <div class="row">
                <% articles.forEach(function(post) { %>
                <div class="col-sm-4 col-md-6">
                        <div class="card mb-3">
                                <div class="card-body">
                                        <h4 class="card-title"><%= post.title %></h4>
                                        <h5 class="card-subtitle text-muted">By <%= post.author %></h5>
                                </div>
                                <div class="card-body">
                                        <img src="<%= post.image %>" alt="" width="100%" height="auto" />
                                      
                                        <div class="card-body">
                                                <a href="/articles/<%= post._id %>" type="button" class="btn btn-light">Read Now</a>
                                               
                                        </div>
                                </div>
                        </div>
                </div>


                <br>
                <% }) %>
              
        </div>
</div>
<!-- <%- include("footer"); -%> -->
</div>